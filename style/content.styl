.content-item {
    height: 400px;
    display: block;
    float: left;
    border: 1px solid #ddd;
    margin-right: 5px;
    font-size: 14px;
}

.content {
    clearfix();
    position: relative;
    width: 1025px;
    height: 508px;
    margin-top: 4px;
    font-size: 0;

    .menu {
        @extend .content-item;
        width: 200px;
        border-color: transparent;

        select {
            width: 175px;
            margin-left: 15px;
        }

        .links {
            list-style-type: none;

            li {
                list-style-type: none;

                a {
                    text-decoration: none;
                    color: #009999;
                    font-family: 'helvetica', 'arial', 'sans-serif';

                    &:hover {
                        color: #1d7373;
                    }
                }
            }
        }
    }

    .fiddle {
        @extend .content-item;
        width: 750px;

        .line-error {
            background-color: #bf3030;
            opacity: 0.1;
        }
    }

    .result-wrapper {
        height: 100px;
        position: absolute;
        border: 1px solid #ddd;
        width: 750px;
        bottom: 0;
        right: 66px;

        .result-badge {
            border-radius: 6px;
            border: 1px solid #ddd;
            z-index: 2;
            padding: 2px 5px;
            font-size: 15px;
            font-family: monospace;
            position: absolute;
            top: 5px;
            right: 5px;
            color: darken(#ddd, 20%);
            cursor: default;

            &:hover {
                color: darken(#ddd, 40%);
                border-color: darken(#ddd, 40%);
            }
        }

        .result {
            height: 100px;
            width: 750px;
            border: none;
        }
    }
}
