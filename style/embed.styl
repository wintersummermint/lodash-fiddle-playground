.embed-wrapper {
    position: relative;
    border: 1px solid #ddd;

    .embed-header {
        width: 100%;
        height: 30px;
        line-height: 30px;
        position: absolute;
        top: 0;
        left: 0;
        border-bottom: 1px solid #ddd;
        color: #000;
        overflow: hidden;
        z-index: 10;
        font-family: 'helvetica', 'arial', 'sans-serif';
        font-size: 13px;
        box-shadow: 0 1px 3px #ddd;

        span {
            color: darken(#e9d9d3, 25%);
            margin-left: 15px;
            cursor: pointer;

            &:hover {
                color: #983e50;
                font-weight: bold;
            }

            &.selected {
                color: #983e50;
                font-weight: bold;
            }
        }

        a {
            float: right;
            margin-right: 10px;
            color: darken(#e9d9d3, 25%);
            text-decoration: none;
            font-size: 10px;

            &:hover {
                color: #983e50;
            }

            &.selected {
                color: #983e50;
            }

        }
    }

    .embed-content {
        position: relative;
        top: 30px;
        height: 260px;
        overflow: auto;

        .fiddle {
            display: block;
            height: 215px;
            margin-left: 10px;
            margin-top: 10px
        }

         .result-wrapper {
            display: none;

            .result {
                width: 100%;
                height: 100%;
                border: none;
            }
        }
    }


}
